<?xml version="1.0" encoding="UTF-8"?>
<?xspec-test require-saxon-bug-4621-fixed?>
<x:description stylesheet="issue-1029.xsl" xmlns:issue-1029="x-urn:test:issue-1029"
	xmlns:myv="x-urn:test:issue-1029:xspec-variable"
	xmlns:x="http://www.jenitennison.com/xslt/xspec" xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

	<x:scenario label="expectations" shared="yes">
		<x:expect label="should catch err:XTMM9000"
			select="QName('http://www.w3.org/2005/xqt-errors', 'XTMM9000')" test="?err?code" />
		<x:expect label="should catch its message body" test="?err?value/text()"
			><![CDATA[my error message]]></x:expect>
	</x:scenario>

	<x:variable as="element(xsl:stylesheet)" name="myv:stylesheet"
		select="doc($x:xspec-uri)/x:description/document(@stylesheet)/xsl:stylesheet" />

	<x:scenario catch="yes" label="catch=yes with xsl:message[@terminate=yes] in xsl:function">
		<x:scenario label="[@as=xs:integer]">
			<x:call function="issue-1029:as-integer" />
			<x:like label="expectations" />
			<x:expect label="verify xsl:function" select="'xs:integer'"
				test="$myv:stylesheet/xsl:function[@name eq 'issue-1029:as-integer']/@as ! string()"
			 />
		</x:scenario>

		<x:scenario label="[empty(@as)]">
			<x:call function="issue-1029:no-as" />
			<x:like label="expectations" />
			<x:expect label="verify xsl:function" select="'true'"
				test="$myv:stylesheet/xsl:function[@name eq 'issue-1029:no-as']/empty(@as) ! string()"
			 />
		</x:scenario>
	</x:scenario>

	<x:scenario catch="yes"
		label="catch=yes with xsl:message[@terminate=yes] in calling xsl:template">
		<x:scenario label="[@as=xs:integer]">
			<x:call template="issue-1029:as-integer" />
			<x:like label="expectations" />
			<x:expect label="verify xsl:template" select="'xs:integer'"
				test="$myv:stylesheet/xsl:template[@name eq 'issue-1029:as-integer']/@as ! string()"
			 />
		</x:scenario>

		<x:scenario label="[empty(@as)]">
			<x:call template="issue-1029:no-as" />
			<x:like label="expectations" />
			<x:expect label="verify xsl:template" select="'true'"
				test="$myv:stylesheet/xsl:template[@name eq 'issue-1029:no-as']/empty(@as) ! string()"
			 />
		</x:scenario>
	</x:scenario>

	<x:scenario catch="yes"
		label="catch=yes with xsl:message[@terminate=yes] in matching xsl:template">
		<x:scenario label="[@as=xs:integer]">
			<x:context mode="issue-1029:as-integer">
				<context-child />
			</x:context>
			<x:like label="expectations" />
			<x:expect label="verify xsl:template" select="'xs:integer'"
				test="$myv:stylesheet/xsl:template[@mode eq 'issue-1029:as-integer']/@as ! string()"
			 />
		</x:scenario>

		<x:scenario label="[empty(@as)]">
			<x:context mode="issue-1029:no-as">
				<context-child />
			</x:context>
			<x:like label="expectations" />
			<x:expect label="verify xsl:template" select="'true'"
				test="$myv:stylesheet/xsl:template[@mode eq 'issue-1029:no-as']/empty(@as) ! string()"
			 />
		</x:scenario>
	</x:scenario>

</x:description>
