<?xml version="1.0" encoding="UTF-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec">

	<x:variable href="doc.xml" name="doc" />

	<x:scenario label="Common scenarios for testing x:column-number()">

		<x:scenario label="document node">
			<x:call function="x:column-number">
				<x:param select="$doc" />
			</x:call>
			<x:expect label="-1" select="-1" />
		</x:scenario>

	</x:scenario>

	<x:scenario label="Common scenarios for testing x:line-number()">

		<x:scenario label="document node">
			<x:call function="x:line-number">
				<x:param select="$doc" />
			</x:call>
			<x:expect label="0" select="0" />
		</x:scenario>

	</x:scenario>

</x:description>
